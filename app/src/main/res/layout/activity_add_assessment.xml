<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/edit_text_assessment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_text_assessment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment Date"
            android:datePickerMode="calendar"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/edit_text_assessment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment type"
            android:inputType="text" />







    </LinearLayout>

</ScrollView>